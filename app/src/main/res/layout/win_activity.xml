<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinActivity"
    android:background="#3C3C3C"
    android:padding="13dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/baseline_arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:text="Congratulations!"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:textSize="32.50dp"/>/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/congratsMsg"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_margin="13dp"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="32.50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_margin="13dp"
        android:textStyle="bold"
        android:text="Your Score "
        android:layout_marginTop="65dp"
        android:layout_below="@+id/congratsMsg"
        android:layout_centerHorizontal="true"
        android:textSize="32.50dp"/>

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_below="@id/score"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_margin="50dp"
            android:textStyle="bold"
            android:text="80"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:textSize="32.50dp"/>/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/presult"
            android:layout_centerInParent="true"
            android:textSize="28.60dp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/R2">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#85430A"
            android:layout_centerHorizontal="true"
            android:text="Take New Quiz"
            android:textColor="#B1611C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#85430A"
            android:layout_centerHorizontal="true"
            android:text="Finish"
            android:textColor="#B1611C"
            android:layout_below="@id/btnNew"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>